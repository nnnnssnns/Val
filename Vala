    <script>
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.innerHTML = '‚ù§Ô∏è';
            document.querySelector('.hearts-container').appendChild(heart);
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = Math.random() * 3 + 2 + 's';

            setTimeout(() => {
                heart.remove();
            }, 5000);
        }

        setInterval(createHeart, 300);

        // Yes button - Show message page
        document.getElementById('yes-button').addEventListener('click', function() {
            document.querySelector('.container').style.display = 'none';
            document.querySelector('.crying-emoji').classList.remove('show');
            document.querySelector('.message-page').classList.add('show');
        });

        // No button - Show crying emoji page
        document.getElementById('no-button').addEventListener('click', function() {
            document.querySelector('.container').style.display = 'none';
            document.querySelector('.crying-emoji').classList.add('show');
            document.querySelector('.message-page').classList.remove('show');
        });
    </script>
